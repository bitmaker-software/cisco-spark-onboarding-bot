      h2.mt-4 Google Drive
      div.row
        div.col-6
          div.card
            div.card-block
              div.form-group
                label(
                for='gdrive-client-id'
                class='blue'
                ) Client ID
                input#gdrive-client-id.form-control(v-model="gdriveSettings.google_drive_client_id")
              div.form-group
                label(
                for='gdrive-developer-key'
                class='blue'
                ) Developer Key
                input#gdrive-developer-key.form-control(v-model="gdriveSettings.google_drive_developer_key")
              div.form-group
                label(
                for='gdrive-user-account'
                class='blue'
                ) User Account
                input#gdrive-user-account.form-control(v-model="gdriveSettings.google_drive_user_account")

      h2.mt-4 Box
      div.row
        div.col-6
          div.card
            div.card-block
              div.form-group
                label(
                for='box-client-id'
                class='blue'
                ) Client ID
                input#box-client-id.form-control(v-model="boxSettings.box_client_id")
              div.form-group
                label(
                for='box-user-account'
                class='blue'
                ) User Account
                input#box-user-account.form-control(v-model="boxSettings.box_user_account")


